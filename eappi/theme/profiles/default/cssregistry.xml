<?xml version="1.0"?>
<!-- This file holds the setup configuration for the portal_css tool. -->
<object name="portal_css">
    <stylesheet title=""
        id="public.css"
        media="screen" rel="stylesheet" rendering="import"
        cacheable="True" compression="safe" cookable="True"
        enabled="1" expression="python: ('@@theming-controlpanel' in request.getURL() and request.HTTP_X_THEME_ENABLED) or not request.HTTP_X_THEME_ENABLED"/>
    <stylesheet title=""
        id="mobile.css"
        media="screen" rel="stylesheet" rendering="import"
        cacheable="True" compression="safe" cookable="True"
        enabled="1" expression="not: request/HTTP_X_THEME_ENABLED | nothing"/>
    <stylesheet title=""
        id="reset.css"
        media="screen" rel="stylesheet" rendering="import"
        cacheable="True" compression="safe" cookable="True"
        enabled="1" expression="not: request/HTTP_X_THEME_ENABLED | nothing"/>

    <!-- -*- extra stuff goes here -*- -->
    <stylesheet title=""
       id="++theme++eappi.theme/css/app.css"
       media="screen" rel="stylesheet" rendering="import"
       cacheable="True" compression="safe" cookable="True"
       enabled="1" expression="python: request.HTTP_X_THEME_ENABLED and not '@@theming-controlpanel' in request.getURL()" applyPrefix="True"/>

</object>
